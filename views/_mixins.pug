mixin icon-x()
  - var width = attributes.width || 16
  - var height = attributes.height || 16
  svg(xmlns="http://www.w3.org/2000/svg" width=width height=height fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16" style=attributes.style)
